.post-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px
}
.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-text{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rox
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin: 0 0 10px 10px;
}
.post-img{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-cont{
  color: #666;
  font-size: 28rpx;
  margin: 0 0 20rpx 20rpx;
  letter-spacing:2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 15rpx;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-img{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
  font-size: 20rpx;
}