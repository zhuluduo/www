.container{
  display: flex;/* 声明一个弹性盒子 */
  flex-direction: column;/* 布局为列布局 */
  padding: 0;
  align-items: left;
}
.headerImg{
  position: relative;
}
.headerImg ,.headerImg image{
  width: 100%;
  height: 460rpx;
  margin-bottom: 10px;
}
.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}
.author-date{
  flex-direction: row;
  margin-left: 30rpx;
}
.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.circle-img{
  width: 100%;
  margin-top: 20rpx;
  position: relative;
  text-align: right;
  vertical-align: middle;
  box-sizing: border-box;
  padding-right: 40rpx;
}
.circle-img::after{
  content: '';
  width: 90%;
  height: 1px;
  position: absolute;
  left: 5%;
  top: 50%;
  background-color:#e5e5e5;
  z-index: -99;
}

.circle-img Image {
  width: 90rpx;
  height: 90rpx;
}
.share-img {
  margin-left: 30rpx;
}
.detail{
  color: #666;
  margin:20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  margin-bottom: 20px;
}