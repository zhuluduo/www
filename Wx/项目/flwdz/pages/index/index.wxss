#loading{
  width:180px;
	height:180px;
	border:6px  rgba(255,108,0,0.5) solid;
	border-radius:50%;
	background-color:#222;
	font-size:60px;
	line-height:180px;
	text-align:center;
	color:white;
	position:relative;
	margin:0 auto;
	overflow:hidden;
	z-index:2;
}
#progress {
	width:200%;
	height:200%;
	border-radius:43%;
	background-color:rgba(255,108,0,0.5);
	position:absolute;
	left:-90px;
	top:90px;
	animation:Rota 3s linear infinite;
}
@-webkit-keyframes Rota {
	0% {
	transform:rotate(0deg);
}
100% {
	transform:rotate(360deg);
}
}
.stateHidde{
  display: block;
}
.stateShow{
  display: none;
}

